import pytest
from calculator import Calculator

class TestCalculatorPositive:
    
    def test_addition_positive_numbers(self):
        """Позитивный тест сложения положительных чисел"""
        calc = Calculator()
        result = calc.add(5, 3)
        assert result == 8
    
    def test_addition_negative_numbers(self):
        """Позитивный тест сложения отрицательных чисел"""
        calc = Calculator()
        result = calc.add(-5, -3)
        assert result == -8
    
    def test_subtraction_positive_result(self):
        """Позитивный тест вычитания с положительным результатом"""
        calc = Calculator()
        result = calc.subtract(10, 3)
        assert result == 7
    
    def test_subtraction_negative_result(self):
        """Позитивный тест вычитания с отрицательным результатом"""
        calc = Calculator()
        result = calc.subtract(3, 10)
        assert result == -7
    
    def test_multiplication_positive_numbers(self):
        """Позитивный тест умножения положительных чисел"""
        calc = Calculator()
        result = calc.multiply(4, 5)
        assert result == 20
    
    def test_multiplication_with_zero(self):
        """Позитивный тест умножения на ноль"""
        calc = Calculator()
        result = calc.multiply(5, 0)
        assert result == 0
    
    def test_division_whole_result(self):
        """Позитивный тест деления с целым результатом"""
        calc = Calculator()
        result = calc.divide(10, 2)
        assert result == 5
    
    def test_division_fractional_result(self):
        """Позитивный тест деления с дробным результатом"""
        calc = Calculator()
        result = calc.divide(5, 2)
        assert result == 2.5
    
    def test_division_decimal_numbers(self):
        """Позитивный тест деления десятичных чисел"""
        calc = Calculator()
        result = calc.divide(1.5, 0.5)
        assert result == 3.0
